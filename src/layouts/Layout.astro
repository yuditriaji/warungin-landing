---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="aplikasi kasir, POS, UMKM, point of sale, kasir digital, QRIS" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="id_ID" />
    <meta property="og:site_name" content="Warungin" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href="https://warungin.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <title>{title}</title>
    
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    
    <style is:global>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font-family: 'Inter', system-ui, sans-serif; }
      .hero-pattern {
        background-color: #f8fafc;
        background-image: radial-gradient(#e2e8f0 1px, transparent 1px);
        background-size: 24px 24px;
      }
      
      /* Auto-scrolling carousel animations */
      @keyframes scroll {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-50%);
        }
      }
      
      @keyframes scroll-reverse {
        0% {
          transform: translateX(-50%);
        }
        100% {
          transform: translateX(0);
        }
      }
      
      .animate-scroll {
        animation: scroll 30s linear infinite;
      }
      
      .animate-scroll-reverse {
        animation: scroll-reverse 35s linear infinite;
      }
      
      .animate-scroll:hover,
      .animate-scroll-reverse:hover {
        animation-play-state: paused;
      }
    </style>
  </head>
  <body class="bg-white text-slate-900 overflow-x-hidden">
    <slot />
    
    <script>
      // Capture referral code from URL and save to cookie (shared across subdomains)
      (function() {
        const urlParams = new URLSearchParams(window.location.search);
        const refCode = urlParams.get('ref');
        
        if (refCode) {
          // Set cookie with 30 day expiry, accessible on all subdomains
          const expires = new Date();
          expires.setTime(expires.getTime() + (30 * 24 * 60 * 60 * 1000)); // 30 days
          document.cookie = `referral_code=${refCode}; expires=${expires.toUTCString()}; path=/; domain=.warungin.com; SameSite=Lax`;
          
          // Redirect to app with the referral code
          const appUrl = 'https://app.warungin.com';
          window.location.href = `${appUrl}/login?ref=${refCode}`;
        }
      })();
      
      // Draggable carousel functionality
      document.addEventListener('DOMContentLoaded', () => {
        const carousels = document.querySelectorAll('.trusted-carousel, .testimonials-carousel');
        
        carousels.forEach(carousel => {
          let isDown = false;
          let startX;
          let scrollLeft;
          let animationPaused = false;
          
          // Get the parent container for scrolling
          const container = carousel.parentElement;
          
          // Make container scrollable
          container.style.overflow = 'hidden';
          container.style.cursor = 'grab';
          
          const pauseAnimation = () => {
            carousel.style.animationPlayState = 'paused';
            animationPaused = true;
          };
          
          const resumeAnimation = () => {
            setTimeout(() => {
              carousel.style.animationPlayState = 'running';
              animationPaused = false;
            }, 2000); // Resume after 2 seconds
          };
          
          container.addEventListener('mousedown', (e) => {
            isDown = true;
            container.style.cursor = 'grabbing';
            startX = e.pageX - container.offsetLeft;
            scrollLeft = container.scrollLeft;
            pauseAnimation();
          });
          
          container.addEventListener('mouseleave', () => {
            if (isDown) {
              isDown = false;
              container.style.cursor = 'grab';
              resumeAnimation();
            }
          });
          
          container.addEventListener('mouseup', () => {
            isDown = false;
            container.style.cursor = 'grab';
            resumeAnimation();
          });
          
          container.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - container.offsetLeft;
            const walk = (x - startX) * 2;
            container.scrollLeft = scrollLeft - walk;
          });
          
          // Touch events for mobile
          container.addEventListener('touchstart', (e) => {
            isDown = true;
            startX = e.touches[0].pageX - container.offsetLeft;
            scrollLeft = container.scrollLeft;
            pauseAnimation();
          }, { passive: true });
          
          container.addEventListener('touchend', () => {
            isDown = false;
            resumeAnimation();
          });
          
          container.addEventListener('touchmove', (e) => {
            if (!isDown) return;
            const x = e.touches[0].pageX - container.offsetLeft;
            const walk = (x - startX) * 2;
            container.scrollLeft = scrollLeft - walk;
          }, { passive: true });
        });
      });
    </script>
  </body>
</html>
