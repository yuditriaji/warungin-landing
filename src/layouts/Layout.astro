const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      "@id": "https://warungin.com/#website",
      "url": "https://warungin.com",
      "name": "Warungin",
      "description": "Aplikasi Kasir untuk UMKM Indonesia",
      "publisher": { "@id": "https://warungin.com/#organization" }
    },
    {
      "@type": "Organization",
      "@id": "https://warungin.com/#organization",
      "name": "PT. Integra Digital Nusa",
      "legalName": "PT. Integra Digital Nusa",
      "url": "https://warungin.com",
      "email": "sinarajimandiri@gmail.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Plaza Aminta Lantai 5/504, Jalan TB Simatupang Kav 10",
        "addressLocality": "Jakarta Selatan",
        "addressRegion": "DKI Jakarta",
        "postalCode": "12310",
