  <div class="min-h-screen bg-slate-50">
    <!-- Header -->
    <header class="sticky top-0 z-50 w-full border-b border-slate-200 bg-white/80 backdrop-blur-md">
      <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
        <a href="/" class="flex items-center gap-2">
          <img src="/mascot.png" alt="Warungin" class="h-8 w-8" />
          <span class="text-xl font-bold tracking-tight text-purple-600">Warungin</span>
