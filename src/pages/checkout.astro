---
import Layout from '../layouts/Layout.astro';

const appUrl = "https://app.warungin.com";

// Get plan from URL query parameter
const url = Astro.url;
const selectedPlan = url.searchParams.get('plan') || '';
---

<Layout title="Checkout - Warungin" description="Pilih paket Warungin yang sesuai dengan kebutuhan bisnis Anda dan mulai kelola warung lebih mudah.">
  <!-- Checkout Page -->
  <section class="min-h-screen py-12 bg-gradient-to-br from-purple-50 to-slate-50">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="text-center mb-12">
        <a href="/" class="inline-flex items-center gap-2 mb-6">
          <img src="/mascot.png" alt="Warungin" class="h-10 w-10" />
          <span class="text-2xl font-bold text-purple-600">Warungin</span>
        </a>
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900 mb-4">Pilih Paket Langganan</h1>
        <p class="text-lg text-slate-600">Upgrade bisnis Anda dengan fitur premium Warungin</p>
      </div>

      <!-- Pricing Cards -->
      <div class="grid lg:grid-cols-3 gap-6 mb-12" id="pricing-cards">
        
        <!-- Gratis -->
        <div class="checkout-card bg-white rounded-2xl p-6 shadow-sm ring-1 ring-slate-200 cursor-pointer hover:ring-purple-300 transition-all" data-plan="gratis" data-price="0">
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold text-slate-900 mb-2">Gratis</h3>
            <p class="text-sm text-slate-500 mb-3">Untuk memulai bisnis kecil</p>
            <div class="text-4xl font-bold text-slate-900">Rp 0</div>
            <p class="text-slate-500 text-sm">selamanya</p>
          </div>
          <ul class="space-y-3 mb-6 text-slate-600 text-sm">
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> 30 transaksi/hari
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> 50 produk
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> QRIS payment
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Laporan dasar
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Diskon & promo
            </li>
          </ul>
          <div class="radio-indicator flex items-center justify-center gap-2 py-2 text-slate-500">
            <span class="w-5 h-5 rounded-full border-2 border-slate-300 flex items-center justify-center">
              <span class="w-2.5 h-2.5 rounded-full bg-transparent"></span>
            </span>
            <span>Pilih Gratis</span>
          </div>
        </div>

        <!-- Pemula - Popular -->
        <div class="checkout-card bg-white rounded-2xl p-6 shadow-lg ring-2 ring-purple-600 relative cursor-pointer transition-all" data-plan="pemula" data-price="49000">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-purple-600 text-white text-xs font-semibold px-3 py-1 rounded-full">PALING POPULER</div>
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold text-slate-900 mb-2">Pemula</h3>
            <p class="text-sm text-slate-500 mb-3">Untuk UMKM berkembang</p>
            <div class="text-4xl font-bold text-slate-900">Rp 49.000</div>
            <p class="text-slate-500 text-sm">/ bulan</p>
          </div>
          <ul class="space-y-3 mb-6 text-slate-600 text-sm">
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Unlimited transaksi
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> 200 produk
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-purple-600 text-base">stars</span> <strong>Kelola bahan baku</strong>
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-purple-600 text-base">stars</span> <strong>Auto-deduct ingredien</strong>
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> 3 pengguna
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Custom logo struk
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Laporan laba/rugi
            </li>
          </ul>
          <div class="radio-indicator flex items-center justify-center gap-2 py-2 text-purple-600 font-medium">
            <span class="w-5 h-5 rounded-full border-2 border-purple-600 flex items-center justify-center bg-purple-600">
              <span class="w-2.5 h-2.5 rounded-full bg-white"></span>
            </span>
            <span>Dipilih</span>
          </div>
        </div>

        <!-- Bisnis -->
        <div class="checkout-card bg-white rounded-2xl p-6 shadow-sm ring-1 ring-slate-200 cursor-pointer hover:ring-purple-300 transition-all" data-plan="bisnis" data-price="149000">
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold text-slate-900 mb-2">Bisnis</h3>
            <p class="text-sm text-slate-500 mb-3">Untuk multi-cabang</p>
            <div class="text-4xl font-bold text-slate-900">Rp 149.000</div>
            <p class="text-slate-500 text-sm">/ bulan</p>
          </div>
          <ul class="space-y-3 mb-6 text-slate-600 text-sm">
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Semua fitur Pemula
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> 3 outlet
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> 10 pengguna
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Role Manager
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Laporan per-outlet
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> Log aktivitas staff
            </li>
            <li class="flex items-center gap-2">
              <span class="material-symbols-outlined text-green-500 text-base">check_circle</span> WhatsApp support
            </li>
          </ul>
          <div class="radio-indicator flex items-center justify-center gap-2 py-2 text-slate-500">
            <span class="w-5 h-5 rounded-full border-2 border-slate-300 flex items-center justify-center">
              <span class="w-2.5 h-2.5 rounded-full bg-transparent"></span>
            </span>
            <span>Pilih Bisnis</span>
          </div>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="max-w-xl mx-auto">
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h2 class="text-xl font-bold text-slate-900 mb-6">Ringkasan Pesanan</h2>
          
          <div class="space-y-4 mb-6">
            <div class="flex justify-between items-center py-3 border-b border-slate-100">
              <span class="text-slate-600">Paket</span>
              <span id="selected-plan-name" class="font-semibold text-slate-900">Pemula</span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-slate-100">
              <span class="text-slate-600">Durasi</span>
              <span class="font-medium text-slate-900">1 Bulan</span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-slate-100">
              <span class="text-slate-600">Subtotal</span>
              <span id="subtotal" class="font-medium text-slate-900">Rp 49.000</span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-slate-100">
              <span class="text-slate-600">Pajak (PPN 11%)</span>
              <span id="tax" class="font-medium text-slate-900">Rp 5.390</span>
            </div>
          </div>

          <div class="flex justify-between items-center py-4 bg-purple-50 rounded-xl px-4 mb-6">
            <span class="text-lg font-bold text-slate-900">Total</span>
            <span id="total" class="text-2xl font-bold text-purple-600">Rp 54.390</span>
          </div>

          <!-- Payment Methods -->
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-slate-700 mb-3">Metode Pembayaran</h3>
            <div class="grid grid-cols-2 gap-3" id="payment-methods">
              <div class="payment-method flex items-center gap-2 p-3 bg-purple-50 rounded-lg border-2 border-purple-600 cursor-pointer transition-all" data-method="bank_transfer">
                <span class="w-4 h-4 rounded-full border-2 border-purple-600 flex items-center justify-center bg-purple-600">
                  <span class="w-2 h-2 rounded-full bg-white"></span>
                </span>
                <span class="material-symbols-outlined text-purple-600">account_balance</span>
                <span class="text-sm font-medium text-purple-700">Transfer Bank</span>
              </div>
              <div class="payment-method flex items-center gap-2 p-3 bg-slate-50 rounded-lg border border-slate-200 cursor-pointer hover:border-purple-300 transition-all" data-method="qris">
                <span class="w-4 h-4 rounded-full border-2 border-slate-300 flex items-center justify-center">
                  <span class="w-2 h-2 rounded-full bg-transparent"></span>
                </span>
                <span class="material-symbols-outlined text-slate-600">qr_code_2</span>
                <span class="text-sm text-slate-700">QRIS</span>
              </div>
              <div class="payment-method flex items-center gap-2 p-3 bg-slate-50 rounded-lg border border-slate-200 cursor-pointer hover:border-purple-300 transition-all" data-method="virtual_account">
                <span class="w-4 h-4 rounded-full border-2 border-slate-300 flex items-center justify-center">
                  <span class="w-2 h-2 rounded-full bg-transparent"></span>
                </span>
                <span class="material-symbols-outlined text-slate-600">credit_card</span>
                <span class="text-sm text-slate-700">Virtual Account</span>
              </div>
              <div class="payment-method flex items-center gap-2 p-3 bg-slate-50 rounded-lg border border-slate-200 cursor-pointer hover:border-purple-300 transition-all" data-method="ewallet">
                <span class="w-4 h-4 rounded-full border-2 border-slate-300 flex items-center justify-center">
                  <span class="w-2 h-2 rounded-full bg-transparent"></span>
                </span>
                <span class="material-symbols-outlined text-slate-600">wallet</span>
                <span class="text-sm text-slate-700">E-Wallet</span>
              </div>
            </div>
          </div>

          <!-- Checkout Button -->
          <button 
            id="checkout-btn"
            class="w-full py-4 px-6 bg-purple-600 text-white font-semibold rounded-xl hover:bg-purple-700 transition-colors flex items-center justify-center gap-2 text-lg"
          >
            <span class="material-symbols-outlined">lock</span>
            Lanjutkan Pembayaran
          </button>

          <p class="text-center text-sm text-slate-500 mt-4">
            <span class="material-symbols-outlined text-green-500 text-sm align-middle">verified</span>
            Pembayaran aman & terenkripsi
          </p>
        </div>

        <!-- Help Section -->
        <div class="mt-6 text-center">
          <p class="text-sm text-slate-500">
            Butuh bantuan? <a href="/kontak" class="text-purple-600 hover:underline">Hubungi kami</a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Login Modal -->
  <div id="login-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-8 max-w-md w-full mx-4 shadow-2xl">
      <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-4">
          <span class="material-symbols-outlined text-purple-600 text-3xl">lock</span>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 mb-2">Masuk untuk Melanjutkan</h3>
        <p class="text-slate-600">Login ke akun Anda untuk menyelesaikan pembelian paket <span id="modal-plan-name" class="font-semibold text-purple-600">Pemula</span></p>
      </div>

      <div class="space-y-3">
        <a 
          id="login-link"
          href={`${appUrl}/login?redirect=checkout&plan=pemula`}
          class="w-full py-3 px-6 bg-purple-600 text-white font-semibold rounded-xl hover:bg-purple-700 transition-colors flex items-center justify-center gap-2"
        >
          <span class="material-symbols-outlined">login</span>
          Masuk
        </a>
        <a 
          id="register-link"
          href={`${appUrl}/register?redirect=checkout&plan=pemula`}
          class="w-full py-3 px-6 border-2 border-purple-600 text-purple-600 font-semibold rounded-xl hover:bg-purple-50 transition-colors flex items-center justify-center gap-2"
        >
          <span class="material-symbols-outlined">person_add</span>
          Daftar Baru
        </a>
      </div>

      <button id="cancel-btn" class="w-full mt-4 py-2 text-slate-500 hover:text-slate-700">
        Batal
      </button>
    </div>
  </div>

  <script is:inline define:vars={{ appUrl }}>
    let selectedPlan = 'pemula';
    let selectedPrice = 49000;

    const planNames = {
      'gratis': 'Gratis',
      'pemula': 'Pemula',
      'bisnis': 'Bisnis'
    };

    function formatCurrency(amount) {
      return new Intl.NumberFormat('id-ID', {
        style: 'currency',
        currency: 'IDR',
        minimumFractionDigits: 0
      }).format(amount);
    }

    function updateSummary() {
      const subtotal = selectedPrice;
      const tax = Math.round(subtotal * 0.11);
      const total = subtotal + tax;

      document.getElementById('selected-plan-name').textContent = planNames[selectedPlan];
      document.getElementById('modal-plan-name').textContent = planNames[selectedPlan];
      document.getElementById('subtotal').textContent = formatCurrency(subtotal);
      document.getElementById('tax').textContent = formatCurrency(tax);
      document.getElementById('total').textContent = formatCurrency(total);

      // Update links
      document.getElementById('login-link').href = `${appUrl}/login?redirect=checkout&plan=${selectedPlan}`;
      document.getElementById('register-link').href = `${appUrl}/register?redirect=checkout&plan=${selectedPlan}`;

      // Handle free plan
      const checkoutBtn = document.getElementById('checkout-btn');
      if (selectedPrice === 0) {
        checkoutBtn.innerHTML = '<span class="material-symbols-outlined">rocket_launch</span> Mulai Gratis Sekarang';
      } else {
        checkoutBtn.innerHTML = '<span class="material-symbols-outlined">lock</span> Lanjutkan Pembayaran';
      }
    }

    function selectPlan(plan, price) {
      selectedPlan = plan;
      selectedPrice = price;

      // Update card styles
      document.querySelectorAll('.checkout-card').forEach(card => {
        const cardPlan = card.dataset.plan;
        const indicator = card.querySelector('.radio-indicator');
        
        if (cardPlan === plan) {
          card.classList.remove('ring-1', 'ring-slate-200');
          card.classList.add('ring-2', 'ring-purple-600');
          indicator.innerHTML = `
            <span class="w-5 h-5 rounded-full border-2 border-purple-600 flex items-center justify-center bg-purple-600">
              <span class="w-2.5 h-2.5 rounded-full bg-white"></span>
            </span>
            <span>Dipilih</span>
          `;
          indicator.classList.remove('text-slate-500');
          indicator.classList.add('text-purple-600', 'font-medium');
        } else {
          card.classList.remove('ring-2', 'ring-purple-600');
          card.classList.add('ring-1', 'ring-slate-200');
          indicator.innerHTML = `
            <span class="w-5 h-5 rounded-full border-2 border-slate-300 flex items-center justify-center">
              <span class="w-2.5 h-2.5 rounded-full bg-transparent"></span>
            </span>
            <span>Pilih ${planNames[cardPlan]}</span>
          `;
          indicator.classList.remove('text-purple-600', 'font-medium');
          indicator.classList.add('text-slate-500');
        }
      });

      updateSummary();
    }

    function handleCheckout() {
      if (selectedPrice === 0) {
        // Free plan - just redirect to register
        window.location.href = `${appUrl}/register?plan=gratis`;
      } else {
        // Paid plan - show login modal
        document.getElementById('login-modal').classList.remove('hidden');
        document.getElementById('login-modal').classList.add('flex');
      }
    }

    function closeModal() {
      document.getElementById('login-modal').classList.add('hidden');
      document.getElementById('login-modal').classList.remove('flex');
    }

    // Close modal on backdrop click
    document.getElementById('login-modal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });

    // Initialize card click handlers
    document.querySelectorAll('.checkout-card').forEach(card => {
      card.addEventListener('click', function() {
        selectPlan(this.dataset.plan, parseInt(this.dataset.price));
      });
    });

    // Payment method selection
    const paymentMethods = {
      'bank_transfer': 'Transfer Bank',
      'qris': 'QRIS',
      'virtual_account': 'Virtual Account',
      'ewallet': 'E-Wallet'
    };
    let selectedPaymentMethod = 'bank_transfer';

    function selectPaymentMethod(method) {
      selectedPaymentMethod = method;
      
      document.querySelectorAll('.payment-method').forEach(pm => {
        const pmMethod = pm.dataset.method;
        const radio = pm.querySelector('span:first-child');
        const icon = pm.querySelector('.material-symbols-outlined');
        const label = pm.querySelector('span:last-child');
        
        if (pmMethod === method) {
          pm.classList.remove('bg-slate-50', 'border', 'border-slate-200');
          pm.classList.add('bg-purple-50', 'border-2', 'border-purple-600');
          radio.innerHTML = '<span class="w-2 h-2 rounded-full bg-white"></span>';
          radio.classList.remove('border-slate-300');
          radio.classList.add('border-purple-600', 'bg-purple-600');
          icon.classList.remove('text-slate-600');
          icon.classList.add('text-purple-600');
          label.classList.remove('text-slate-700');
          label.classList.add('text-purple-700', 'font-medium');
        } else {
          pm.classList.remove('bg-purple-50', 'border-2', 'border-purple-600');
          pm.classList.add('bg-slate-50', 'border', 'border-slate-200');
          radio.innerHTML = '<span class="w-2 h-2 rounded-full bg-transparent"></span>';
          radio.classList.remove('border-purple-600', 'bg-purple-600');
          radio.classList.add('border-slate-300');
          icon.classList.remove('text-purple-600');
          icon.classList.add('text-slate-600');
          label.classList.remove('text-purple-700', 'font-medium');
          label.classList.add('text-slate-700');
        }
      });

      // Update links with payment method
      document.getElementById('login-link').href = `${appUrl}/login?redirect=checkout&plan=${selectedPlan}&method=${selectedPaymentMethod}`;
      document.getElementById('register-link').href = `${appUrl}/register?redirect=checkout&plan=${selectedPlan}&method=${selectedPaymentMethod}`;
    }

    // Initialize payment method click handlers
    document.querySelectorAll('.payment-method').forEach(pm => {
      pm.addEventListener('click', function() {
        selectPaymentMethod(this.dataset.method);
      });
    });

    // Checkout button click handler
    document.getElementById('checkout-btn').addEventListener('click', function() {
      handleCheckout();
    });

    // Cancel button click handler
    document.getElementById('cancel-btn').addEventListener('click', function() {
      closeModal();
    });

    // Check URL for pre-selected plan
    const urlParams = new URLSearchParams(window.location.search);
    const urlPlan = urlParams.get('plan');
    if (urlPlan && ['gratis', 'pemula', 'bisnis'].includes(urlPlan)) {
      const prices = { 'gratis': 0, 'pemula': 49000, 'bisnis': 149000 };
      selectPlan(urlPlan, prices[urlPlan]);
    }
  </script>
</Layout>
